{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"],
      "providers/*": ["./providers/*"],
      "assets/*": ["./assets/*"],
      "styles/*": ["./styles/*"],
      "utils/*": ["./utils/*"],
      "hooks/*": ["./hooks/*"],
      "services/*": ["./services/*"],
      "hoc/*": ["./hoc/*"],
      "enums/*": ["./enums/*"],
      "data/*": ["./data/*"],
      "types/*": ["./types/*"],
      "constants/*": ["./constants/*"],
      "safe/*": ["./safe/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "api/ping.js",
    "api/geoblock.js"
  ],
  "exclude": ["node_modules", "./dist/"]
}
