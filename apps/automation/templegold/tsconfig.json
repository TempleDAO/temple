{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "outDir": "dist",
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution": "bundler",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src"]
}