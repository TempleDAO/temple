{
  "name": "@temple/tasks",
  "version": "0.0.1",
  "description": "temple automation tasks using overlord framework",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "prepare": "yarn typechain",
    "typechain": "typechain --target=ethers-v6 --out-dir src/typechain abi/*.json",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn tsc --noEmit &&  yarn esbuild --platform=node --bundle --outfile=dist/main.js src/main.ts",
    "build:localtest": "yarn tsc --noEmit &&  yarn esbuild --platform=node --bundle --outfile=dist/main-localtest.js src/main-localtest.ts",
    "build:image": "docker build --tag temple-tasks .",
    "dev": "yarn build && node ./dist/main.js",
    "dev:local": "yarn build:localtest && node ./dist/main-localtest.js",
    "install-abis": "./src/scripts/install-abis.sh"
  },
  "dependencies": {
    "@mountainpath9/big-rational": "^0.4.0",
    "@mountainpath9/overlord-core": "1.9.3",
    "@mountainpath9/overlord-ethers": "^1.5.0",
    "@mountainpath9/overlord-viem": "1.9.1",
    "axios": "^1.5.1",
    "cron-parser": "^4.9.0",
    "crypto-random-string": "^5.0.0",
    "date-fns": "^2.30.0",
    "discord.js": "^14.14.1",
    "ethers": "~6.13.1",
    "exponential-backoff": "^3.1.1",
    "viem": "^2.30.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.0",
    "@types/jquery": "^3.5.19",
    "esbuild": "^0.19.4",
    "tsc-alias": "^1.8.3",
    "tsx": "^4.7.2",
    "typechain": "^8.1.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{html,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
