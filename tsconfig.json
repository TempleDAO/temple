{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [],
    "jsx": "react",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@temple/*": [
        "apps/*/src",
        "shared/*/src",
        "tools/*/src",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}